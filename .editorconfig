# editorconfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Matches the exact files either package.json, .travis.yml or bower.json
[{package.json,.travis.yml,bower.json}]
indent_style = space
indent_size = 2
