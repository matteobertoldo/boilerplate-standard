{% set cellcolor = page.uikit.flexgrid.gridcolors %}
<style type="text/css">
#uikit-body-render .render-grid-content {
    margin-top: 80px;
}

@media only screen and (max-width: {{uikit.breakpoint.medium + 'px'}}) {
    #uikit-body-render .render-grid-content {
        margin-top: 40px;
    }
}

#uikit-body-render .render-grid-content .grid-x .cell {
    min-height: 80px;
    background-color: #d9d9d9;
    border-radius: 3px;
    margin-bottom: 30px;
}

#uikit-body-render .grid-container .max-width-count {
    display: block;
    text-align: center;
    font-size: 12px;
    color: #3bccff;
}

#uikit-body-render .grid-container .width-count {
    display: block;
    position: relative;
    width: 100%;
    height: 2px;
    background-color: #3bccff;
    margin-top: 10px;
}

#uikit-body-render .grid-container .width-count::before,
#uikit-body-render .grid-container .width-count::after {
    content: '';
    position: absolute;
    top: -10px;
    width: 2px;
    height: 10px;
    background-color: inherit;
}

#uikit-body-render .grid-container .width-count::before {
    left: 0;
}

#uikit-body-render .grid-container .width-count::after {
    right: 0;
}
</style>
