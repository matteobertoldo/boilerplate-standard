{% set rowclass = uikit.section.form.rowclass %}
{% set labelclass = uikit.section.form.labelclass %}
<style type="text/css">
#uikit-body-render .uikit-form-render {
    max-width: 680px;
    margin: 60px auto 0;
}

#uikit-body-render .uikit-form::before,
#uikit-body-render .uikit-form::after {
    content: '';
    display: table;
}

#uikit-body-render .uikit-form::after {
    clear: both;
}

#uikit-body-render .uikit-form-render .uikit-form {
    margin-left: -10px;
    margin-right: -10px;
}

#uikit-body-render .uikit-form .{{rowclass}} {
    margin-bottom: 20px;
}

#uikit-body-render .uikit-form .{{rowclass}}.wide {
    float: left;
    width: 100%;
    padding-left: 10px;
    padding-right: 10px;
}

#uikit-body-render .uikit-form .{{rowclass}}.split {
    float: left;
    width: 50%;
    padding-left: 10px;
    padding-right: 10px;
}

@media only screen and (max-width: {{uikit.breakpoint.large + 'px'}}) {
    #uikit-body-render .uikit-form .{{rowclass}}.split {
        width: 100%;
    }
}

#uikit-body-render .uikit-form .{{rowclass}}.no-gutter {
    padding-left: 0;
    padding-right: 0;
}

#uikit-body-render .uikit-form .{{labelclass}} {
    display: block;
}

#uikit-body-render .uikit-form .radio-group .input-radio:not(:last-of-type) {
    margin-right: 10px;
}

#uikit-body-render .uikit-form .checkbox-radio-group .{{labelclass}} {
    margin-bottom: 20px;
    padding-bottom: 10px;
    border-bottom: 1px solid #cdcdcd;
}
</style>
