<style type="text/css">
#renderkit-body #uikit-aside-nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 80px;
    min-height: 100vh;
    height: 100%;
    background-color: #1a1a1c;
    overflow: hidden;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    z-index: 99;
}

@media print {
    #uikit-aside-nav {
        display: none;
    }
}

@media only screen and (max-width: {{uikit.breakpoint.large + 'px'}}) {
    #renderkit-body #uikit-aside-nav {
        position: static;
        width: 100%;
        height: 115px;
        min-height: 1px;
        height: auto;
        z-index: auto;
    }
}

#renderkit-body #uikit-aside-nav .project-name {
    position: absolute;
    top: 50vh;
    left: 0;
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
    white-space: nowrap;
    color: #666;
    opacity: 0.5;
    margin: 0;
    cursor: default;
    -webkit-transform: rotate(-90deg) translateX(-50%);
    -ms-transform: rotate(-90deg) translateX(-50%);
    transform: rotate(-90deg) translateX(-50%);
    -webkit-transform-origin: 40px center;
    -ms-transform-origin: 40px center;
    transform-origin: 40px center;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    z-index: 99;
}

@media only screen and (max-width: {{uikit.breakpoint.large + 'px'}}) {
    #renderkit-body #uikit-aside-nav .project-name {
        position: static;
        font-size: 12px;
        text-align: center;
        -webkit-transform: none;
        -ms-transform: none;
        transform: none;
        padding-top: 20px;
        padding-bottom: 20px;
    }
}

#renderkit-body #uikit-aside-nav .github-icon {
    position: absolute;
    left: 50%;
    bottom: 20px;
    width: 40px;
    height: 39px;
    margin-left: -20px;
    z-index: 90;
}

@media only screen and (max-width: {{uikit.breakpoint.large + 'px'}}) {
    #renderkit-body #uikit-aside-nav .github-icon {
        position: relative;
        left: auto;
        bottom: auto;
        margin: 0 auto 20px;
    }
}

#renderkit-body #uikit-aside-nav .github-link {
    display: block;
    width: 100%;
    height: 100%;
    background: url(data:image/svg+xml;base64,);
    background-repeat: no-repeat;
    background-position: center;
    background-size: 100%;
    border-radius: 50%;
    opacity: 0.65;
    transition: opacity 0.3s ease;
}

#renderkit-body #uikit-aside-nav .github-link:hover {
    opacity: 0.8;
}

#renderkit-body #uikit-aside-nav canvas {
    display: block;
    vertical-align: bottom;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 10;
}

@media only screen and (max-width: {{uikit.breakpoint.large + 'px'}}) {
    #renderkit-body #uikit-aside-nav canvas {
        height: 115px !important;
    }
}
</style>
<aside id="uikit-aside-nav">
    <h1 class="project-name">
        {{uikit.projectname}}
    </h1>
    {% if uikit.aside.github %}
        <div class="github-icon">
            <a class="github-link" href="https://github.com/matteobertoldo/renderkit" target="_blank"></a>
        </div>
    {% endif %}
</aside>
<script src="https://cdnjs.cloudflare.com/ajax/libs/particles.js/2.0.0/particles.min.js"></script>
