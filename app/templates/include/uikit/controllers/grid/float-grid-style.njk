{% set rowclass = page.uikit.floatgrid.rowclass %}
{% set columnclass = page.uikit.floatgrid.columnclass %}
<style>
.render-grid-content .{{rowclass}}  {
    margin-top: 80px;
}

.render-grid-content .{{columnclass}} .content {
    min-height: 80px;
    background-color: #d9d9d9;
    border-radius: 3px;
    margin-bottom: 30px;
}

.{{rowclass}} .max-width-count {
    display: block;
    text-align: center;
    font-size: 12px;
    color: #3bccff;
}

.{{rowclass}} .width-count {
    display: block;
    position: relative;
    width: 100%;
    height: 2px;
    background-color: #3bccff;
    margin-top: 10px;
}

.{{rowclass}} .width-count::before,
.{{rowclass}} .width-count::after {
    content: '';
    position: absolute;
    top: -10px;
    width: 2px;
    height: 10px;
    background-color: inherit;
}

.{{rowclass}} .width-count::before {
    left: 0;
}

.{{rowclass}} .width-count::after {
    right: 0;
}
</style>
