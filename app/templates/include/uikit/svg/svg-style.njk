{% set fillcolor = page.uikit.svgicons.color %}
{% set bordercolor = page.uikit.svgicons.switcher.bordercolor %}
{% set shadowcolor = page.uikit.svgicons.switcher.shadowcolor %}
{% set socialfill = {
    facebook: '#3b5999',
    twitter: '#55acee',
    linkedin: '#0077B5',
    youtube: '#cd201f',
    pinterest: '#bd081c',
    "google-plus": '#dd4b39'
} %}
<style type="text/css">
#uikit-svg-list {
    display: block;
    width: 100%;
    max-width: 1400px;
    list-style-type: none;
    letter-spacing: normal;
    line-height: normal;
    text-align: center;
    margin: 40px auto 0;
    padding: 0;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
}

#uikit-svg-list li {
    display: inline-block;
    position: relative;
    vertical-align: middle;
    width: 120px;
    height: auto;
    text-align: center;
    letter-spacing: normal;
    margin: 0;
    padding: 16px 16px 25px;
}

#uikit-svg-list li svg.visuallyhidden {
    position: absolute;
    top: 0;
    left: 0;
    width: 1px;
    height: 1px;
    clip: rect(1px 1px 1px 1px);
    margin: -1px;
    padding: 0;
}

#uikit-svg-list li svg {
    display: inline-block;
    vertical-align: middle;
    position: relative;
    top: -.0625em;
    width: 100%;
    height: 100%;
    fill: {{fillcolor}};
}

#uikit-svg-list li svg.large {
    width: 60px;
}

#uikit-svg-list li svg.medium {
    width: 45px;
}

#uikit-svg-list li svg.small {
    width: 30px;
}

{% for svgicons, fill in socialfill %}
#uikit-svg-list.true-tone li svg.{{svgicons}} {
    fill: {{fill}};
}
{% endfor %}

#uikit-svg-list.true-tone li svg.instagram {
    fill: url(#instagram-gradient);
}

#uikit-switch-render  {
    max-width: 450px;
    margin-top: 30px;
    margin-bottom: 0;
}

#uikit-switch-render .info {
    display: block;
    font-size: 11px;
    line-height: 1.4;
    letter-spacing: normal;
    text-transform: uppercase;
    margin-bottom: 10px;
}

#uikit-switch-item {
    position: relative;
}

#uikit-switch-item .toggle {
	width: 51px;
	height: 31px;
}

#uikit-switch-item .toggle label,
#uikit-switch-item .toggle i {
    display: block;
	box-sizing: border-box;
	background: #ffffff;
    cursor: pointer;
}

#uikit-switch-item .toggle label {
	width: 51px;
	height: 32px;
	border-radius: 32px;
	border: 2px solid {{bordercolor}};
	transition: all 0.30s ease;
}

#uikit-switch-item .toggle i {
	position: absolute;
	top: 2px;
	left: 2px;
	width: 28px;
	height: 28px;
	border-radius: 28px;
	box-shadow: 0 0 1px 0 rgba(0,0,0, 0.25), 0 3px 3px 0 rgba(0,0,0, 0.15);
	background: #ffffff;
	transition: all 0.3s cubic-bezier(0.275, -0.450, 0.725, 1.450);
}

#uikit-switch-item input[type="checkbox"] {
	display: none;
}

#uikit-switch-item input[type="checkbox"]:checked + .toggle label {
	border: 16px solid {{shadowcolor}};
}

#uikit-switch-item input[type="checkbox"]:checked + .toggle i {
	left: 21px;
}
</style>
