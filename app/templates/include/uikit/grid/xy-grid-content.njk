{#
- Set on `global.json` file your favorite preview of grid. Choose betwenn `xy-grid` or `float-grid` or both from Foundation.
#}

{% set columns = page.uikit.flexgrid.gridcolumns %}
{% set finalcolumns = columns / columns %}
{% set gridcontainer = page.uikit.flexgrid.gridcontainer %}

<div class="render-grid-content">
    <h3 class="section-title-type">XY Grid System</h3>
    <p class="description-type">
        Currently use Foundation: <code class="function-code">`xy-grid`</code> with <b>{{columns}}</b> columns. <br />
        You set <code class="sass-code">$flex: true</code>. <br />
        Configure your <code class="sass-code">$grid-row-width</code> & <code class="sass-code">$grid-margin-gutters</code>.
    </p>

    <div class="grid-container">
        <div class="grid-x grid-margin-x">
            {% for column in range(0, columns) %}
                <div class="small-{{columns}} medium-{{columns}} large-{{finalcolumns}} cell"></div>
            {% endfor %}
        </div>
        <span class="max-width-count">{{gridcontainer}}</span>
        <span class="width-count"></span>
    </div>
</div>
